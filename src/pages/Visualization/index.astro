---
import Fractal from "./Fractal/index.astro";
import Quantum from "./Quantum/index.astro";
---

<style scoped>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    background: rgb(0, 0, 0);
  }
  .cards {
    display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: center;
    padding: 50px;
  }
  .card {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    height: max-content;
    display: flex;
    flex-direction: column;
  }
  .card-header {
    background: #f7f7f7;
    padding: 10px;
    font-size: 1.2rem;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }
  .card-body {
    flex: 1;
    position: relative;
  }
  .card-body > * {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>

<div class="cards">
  <div class="card">
    <div class="card-header">Fractal Animation</div>
    <div class="card-body">
      <Fractal />
    </div>
  </div>
  <div class="card">
    <div class="card-header">Quantum Visualization</div>
    <div class="card-body">
      <Quantum />
    </div>
  </div>
</div>
